<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Where You want to go?"/>


    <RadioGroup
        android:id="@+id/rgopinionexa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/radiobutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Director's Room"
            android:textSize="14sp"></RadioButton>

        <RadioButton
            android:id="@+id/radioex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Conference Room"
            android:textSize="14sp"></RadioButton>

        <RadioButton
            android:id="@+id/radioex3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Cafeteria"
            android:textSize="14sp"></RadioButton>

        <RadioButton
            android:id="@+id/radioex4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Toilet"
            android:textSize="14sp"></RadioButton>

    </RadioGroup>



</LinearLayout>