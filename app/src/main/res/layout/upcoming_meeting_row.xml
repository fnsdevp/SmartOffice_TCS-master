<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/m65"
                        android:layout_height="@dimen/m65"
                        android:layout_marginBottom="@dimen/m5"
                        android:layout_marginLeft="@dimen/m10"
                        android:layout_marginRight="@dimen/m10"
                        android:layout_marginTop="@dimen/m3"
                        android:background="@drawable/normal_card_green">

                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/tv_date"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/m5"
                            android:layout_marginTop="@dimen/m5"
                            android:text="7"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_big"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/m10"
                            android:text="Jan 2018"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_normal" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m3"
                        android:layout_marginRight="@dimen/m3">
                        <ImageView
                            android:id="@+id/iv_memo"
                            android:layout_width="@dimen/m30"
                            android:layout_height="@dimen/m30"
                            android:paddingBottom="@dimen/m5"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_note" />
                        <ImageView
                            android:id="@+id/iv_calender"
                            android:layout_width="@dimen/m30"
                            android:layout_height="@dimen/m30"
                            android:paddingBottom="@dimen/m5"
                            android:src="@drawable/ic_calender" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/m5"
                            android:layout_marginTop="@dimen/m5"
                            android:layout_toLeftOf="@+id/ll_status">

                            <ImageView
                                android:id="@+id/iv_meeting_status"
                                android:layout_width="@dimen/m18"
                                android:layout_height="@dimen/m22"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_meetingconfirm" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/m5"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:singleLine="true"
                                android:text="Avishek"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/m5"
                            android:layout_marginTop="@dimen/m10">

                            <TextView
                                android:id="@+id/tv_cancel"
                                android:layout_width="@dimen/m70"
                                android:layout_height="@dimen/m25"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/m5"
                                android:layout_marginRight="@dimen/m10"
                                android:background="@drawable/roundedcorner_background_bg_blue"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:text="@string/cancel"
                                android:textColor="@color/text_white"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/m5">

                        <LinearLayout
                            android:id="@+id/ll_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/ll_direction"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:text="9804104306"
                                android:textColor="@color/text_light_gray"
                                android:textSize="@dimen/text_normal" />

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:text="avishek@gmail.com"
                                android:textColor="@color/text_light_gray"
                                android:textSize="@dimen/text_normal"
                                android:textStyle="italic" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/iv_call"
                                android:layout_width="@dimen/m35"
                                android:layout_height="@dimen/m35"
                                android:scaleType="fitXY"
                                android:layout_marginRight="@dimen/m5"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/ic_call" />

                            <ImageView
                                android:id="@+id/iv_map"
                                android:layout_width="@dimen/m35"
                                android:layout_height="@dimen/m35"
                                android:layout_marginLeft="@dimen/m5"
                                android:layout_marginRight="@dimen/m5"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_maps_directions" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_timing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/m5"
                            android:ellipsize="end"
                            android:text="@string/timings"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_timings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/m5"
                            android:layout_toRightOf="@+id/tv_timing"
                            android:ellipsize="end"
                            android:fontFamily="serif"
                            android:text="10 AM - 11 AM"
                            android:textColor="@color/text_light_gray"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>